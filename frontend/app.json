{
  "expo": {
    "name": "ReceptAI",
    "slug": "receptai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.receptai.app",
      "infoPlist": {
        "NSCameraUsageDescription": "Приложению нужен доступ к камере для распознавания продуктов.",
        "NSPhotoLibraryUsageDescription": "Приложению нужен доступ к фото для выбора продуктов."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.receptai.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    }
  }
}